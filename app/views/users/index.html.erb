<% provide :title, t(".all_users") %>
<h1><%= t ".all_users" %></h1>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user %>
      <%= link_to user.name, user %>
      <% if current_user.is_admin? %>
        | <%= link_to t(".delete"), user, method: :delete, data: {confirm: t(".sure")} %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>
