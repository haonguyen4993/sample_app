<% provide :title, t("navigation.login") %>
<h1><%= t "navigation.login" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email, t("users.form.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("users.form.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t("navigation.login"), class: "btn btn-primary" %>
    <% end %>
    <p>New user? <%= link_to t("navigation.signup"), signup_path %></p>
  </div>
</div>
